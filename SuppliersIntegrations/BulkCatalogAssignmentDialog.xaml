<Window x:Class="BOMVIEW.BulkCatalogAssignmentDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Assign Catalogs to Parts" 
        Height="600" 
        Width="800"
        WindowStartupLocation="CenterOwner"
        Background="#F0F2F5">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="Assign Catalogs to Parts" 
                   FontSize="18" 
                   FontWeight="SemiBold" 
                   Margin="0,0,0,15"/>

        <DataGrid Grid.Row="1" 
                  ItemsSource="{Binding PartsToAssign}" 
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  Margin="0,0,0,15">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Part Number" 
                                    Binding="{Binding PartNumber}" 
                                    IsReadOnly="True"
                                    Width="150"/>
                <DataGridTextColumn Header="Description" 
                                    Binding="{Binding Description}" 
                                    IsReadOnly="True"
                                    Width="250"/>
                <DataGridTemplateColumn Header="Catalog" Width="250">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ComboBox ItemsSource="{Binding SuggestedCatalogs}"
                                      SelectedItem="{Binding SelectedCatalog, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      DisplayMemberPath="Name"
                                      Width="230"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Cancel" 
                    Width="100" 
                    Height="35" 
                    Margin="0,0,10,0"
                    Click="CancelButton_Click"/>
            <Button Content="Assign All" 
                    Width="100" 
                    Height="35"
                    Background="#2196F3"
                    Foreground="White"
                    BorderThickness="0"
                    Click="AssignAllButton_Click"/>
        </StackPanel>

        <!-- Loading Overlay -->
        <Grid x:Name="LoadingOverlay" 
              Grid.Row="0" 
              Grid.RowSpan="3"
              Visibility="Collapsed"
              Background="#80000000">
            <StackPanel HorizontalAlignment="Center" 
                        VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" 
                            Width="100" 
                            Height="2" 
                            Margin="0,0,0,10"/>
                <TextBlock x:Name="LoadingText" 
                          Text="Processing..." 
                          Foreground="White"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>