<Window x:Class="BOMVIEW.BomSummaryDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BOM Comparison Summary" 
        Height="550" 
        Width="800"
        WindowStartupLocation="CenterOwner"
        Background="#F0F2F5">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="BOM Comparison Summary" 
                   FontSize="18" 
                   FontWeight="SemiBold" 
                   Margin="0,0,0,15"/>

        <Border Grid.Row="1" 
                Background="White" 
                CornerRadius="8" 
                Padding="15" 
                Margin="0,0,0,15"
                BorderBrush="#E0E0E0"
                BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Total Parts -->
                <Border Grid.Column="0" 
                        Background="#E3F2FD" 
                        CornerRadius="4" 
                        Padding="15,10" 
                        MinWidth="120"
                        Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="Total Parts" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding TotalParts}" 
                                   FontSize="20" 
                                   FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <!-- Upload Count -->
                <Border Grid.Column="1" 
                        Background="#E8F5E9" 
                        CornerRadius="4" 
                        Padding="15,10" 
                        MinWidth="120"
                        Margin="10,0,10,0">
                    <StackPanel>
                        <TextBlock Text="To Upload" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding UploadCount}" 
                                   FontSize="20" 
                                   FontWeight="Bold"
                                   Foreground="#388E3C"/>
                    </StackPanel>
                </Border>

                <!-- Skipped Count -->
                <Border Grid.Column="2" 
                        Background="#FFF3E0" 
                        CornerRadius="4" 
                        Padding="15,10" 
                        MinWidth="120"
                        Margin="10,0,10,0">
                    <StackPanel>
                        <TextBlock Text="Skipped" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding SkippedCount}" 
                                   FontSize="20" 
                                   FontWeight="Bold"
                                   Foreground="#EF6C00"/>
                    </StackPanel>
                </Border>

                <!-- Modified Count -->
                <Border Grid.Column="3" 
                        Background="#E8EAF6" 
                        CornerRadius="4" 
                        Padding="15,10" 
                        MinWidth="120"
                        Margin="10,0,0,0">
                    <StackPanel>
                        <TextBlock Text="Modified" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding ModifiedCount}" 
                                   FontSize="20" 
                                   FontWeight="Bold"
                                   Foreground="#3949AB"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <TabControl Grid.Row="2" Margin="0,0,0,15">
            <TabItem Header="Parts to Upload">
                <DataGrid ItemsSource="{Binding PartsToUpload, Mode=OneWay}" 
                          AutoGenerateColumns="False" 
                          IsReadOnly="True"
                          HeadersVisibility="Column"
                          GridLinesVisibility="All"
                          HorizontalGridLinesBrush="#E5E7EB"
                          VerticalGridLinesBrush="#E5E7EB"
                          BorderBrush="#D1D5DB"
                          AlternatingRowBackground="#F9FAFB"
                          Background="White"
                          BorderThickness="1">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Order Code" 
                                            Binding="{Binding OrderingCode}" 
                                            Width="150">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="{x:Type TextBlock}">
                                    <Setter Property="Padding" Value="8,5"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Designator" 
                                            Binding="{Binding Designator}" 
                                            Width="150">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="{x:Type TextBlock}">
                                    <Setter Property="Padding" Value="8,5"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Value" 
                                            Binding="{Binding Value}" 
                                            Width="130">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="{x:Type TextBlock}">
                                    <Setter Property="Padding" Value="8,5"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="PCB Footprint" 
                                            Binding="{Binding PcbFootprint}" 
                                            Width="130">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="{x:Type TextBlock}">
                                    <Setter Property="Padding" Value="8,5"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Quantity" 
                                            Binding="{Binding QuantityTotal}" 
                                            Width="100">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="{x:Type TextBlock}">
                                    <Setter Property="Padding" Value="8,5"/>
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Foreground" Value="#388E3C"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
            <TabItem Header="Skipped Parts">
                <DataGrid ItemsSource="{Binding SkippedParts, Mode=OneWay}" 
                          AutoGenerateColumns="False" 
                          IsReadOnly="True"
                          HeadersVisibility="Column"
                          GridLinesVisibility="All"
                          HorizontalGridLinesBrush="#E5E7EB"
                          VerticalGridLinesBrush="#E5E7EB"
                          BorderBrush="#D1D5DB"
                          AlternatingRowBackground="#FFFDE7"
                          Background="White"
                          BorderThickness="1">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Order Code" 
                                            Binding="{Binding OrderingCode}" 
                                            Width="150">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="{x:Type TextBlock}">
                                    <Setter Property="Padding" Value="8,5"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Designator" 
                                            Binding="{Binding Designator}" 
                                            Width="150">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="{x:Type TextBlock}">
                                    <Setter Property="Padding" Value="8,5"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Value" 
                                            Binding="{Binding Value}" 
                                            Width="130">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="{x:Type TextBlock}">
                                    <Setter Property="Padding" Value="8,5"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="PCB Footprint" 
                                            Binding="{Binding PcbFootprint}" 
                                            Width="130">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="{x:Type TextBlock}">
                                    <Setter Property="Padding" Value="8,5"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Quantity" 
                                            Binding="{Binding QuantityTotal}" 
                                            Width="100">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="{x:Type TextBlock}">
                                    <Setter Property="Padding" Value="8,5"/>
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Foreground" Value="#EF6C00"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
            <TabItem Header="Modified Parts">
                <DataGrid ItemsSource="{Binding ModifiedParts, Mode=OneWay}" 
                          AutoGenerateColumns="False" 
                          IsReadOnly="True"
                          HeadersVisibility="Column"
                          GridLinesVisibility="All"
                          HorizontalGridLinesBrush="#E5E7EB"
                          VerticalGridLinesBrush="#E5E7EB"
                          BorderBrush="#D1D5DB"
                          AlternatingRowBackground="#E8EAF6"
                          Background="White"
                          BorderThickness="1">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Order Code" 
                                            Binding="{Binding OrderingCode}" 
                                            Width="140">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="{x:Type TextBlock}">
                                    <Setter Property="Padding" Value="8,5"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Designator" 
                                            Binding="{Binding Designator}" 
                                            Width="140">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="{x:Type TextBlock}">
                                    <Setter Property="Padding" Value="8,5"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Value" 
                                            Binding="{Binding Value}" 
                                            Width="130">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="{x:Type TextBlock}">
                                    <Setter Property="Padding" Value="8,5"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Original Qty" 
                                            Binding="{Binding QuantityTotal}" 
                                            Width="90">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="{x:Type TextBlock}">
                                    <Setter Property="Padding" Value="8,5"/>
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTemplateColumn Header="Modified Qty" Width="150">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="8,5">
                                        <TextBlock Text="{Binding ModifiedQuantity}" 
                                                   FontWeight="SemiBold"
                                                   Foreground="#3949AB"/>
                                        <TextBlock Text=" (adjusted)" 
                                                   Foreground="#757575"
                                                   FontStyle="Italic" 
                                                   Margin="5,0,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
        </TabControl>

        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,0,0,0">
            <Button x:Name="ExportButton" 
                    Content="Export to Excel" 
                    Width="120" 
                    Height="35" 
                    Margin="0,0,10,0"
                    Background="#2196F3"
                    Foreground="White"
                    BorderThickness="0"
                    Click="ExportButton_Click"/>
            <Button Content="Close" 
                    Width="80" 
                    Height="35"
                    Background="#607D8B"
                    Foreground="White"
                    BorderThickness="0"
                    Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>