<Window x:Class="BOMVIEW.ManualPartEntryDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manual Part Information" 
        Height="400" 
        Width="500"
        WindowStartupLocation="CenterOwner"
        Background="#F0F2F5">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   TextWrapping="Wrap" 
                   Margin="0,0,0,15">
            <Run Text="Part " FontWeight="SemiBold"/>
            <Run Text="{Binding PartNumber}" FontWeight="SemiBold"/>
            <Run Text=" was not found in DigiKey. Please enter information manually:"/>
        </TextBlock>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Vendor -->
                    <TextBlock Grid.Row="0" Grid.Column="0" 
                               Text="Vendor:" 
                               VerticalAlignment="Center"
                               Margin="0,0,10,5"/>
                    <TextBox Grid.Row="0" Grid.Column="1" 
                             x:Name="VendorTextBox"
                             Margin="0,0,0,5"/>

                    <!-- Description -->
                    <TextBlock Grid.Row="1" Grid.Column="0" 
                               Text="Description:" 
                               VerticalAlignment="Center"
                               Margin="0,0,10,5"/>
                    <TextBox Grid.Row="1" Grid.Column="1" 
                             x:Name="DescriptionTextBox"
                             Margin="0,0,0,5"/>

                    <!-- Manufacturer -->
                    <TextBlock Grid.Row="2" Grid.Column="0" 
                               Text="Manufacturer:" 
                               VerticalAlignment="Center"
                               Margin="0,0,10,5"/>
                    <TextBox Grid.Row="2" Grid.Column="1" 
                             x:Name="ManufacturerTextBox"
                             Margin="0,0,0,5"/>

                    <!-- Manufacturer Part # -->
                    <TextBlock Grid.Row="3" Grid.Column="0" 
                               Text="Manufacturer Part #:" 
                               VerticalAlignment="Center"
                               Margin="0,0,10,5"/>
                    <TextBox Grid.Row="3" Grid.Column="1" 
                             x:Name="ManufacturerPartTextBox"
                             Margin="0,0,0,5"/>

                    <!-- Cost -->
                    <TextBlock Grid.Row="4" Grid.Column="0" 
                               Text="Unit Cost:" 
                               VerticalAlignment="Center"
                               Margin="0,0,10,5"/>
                    <TextBox Grid.Row="4" Grid.Column="1" 
                             x:Name="CostTextBox"
                             Margin="0,0,0,5"/>

                    <!-- Lead Time -->
                    <TextBlock Grid.Row="5" Grid.Column="0" 
                               Text="Lead Time:" 
                               VerticalAlignment="Center"
                               Margin="0,0,10,5"/>
                    <TextBox Grid.Row="5" Grid.Column="1" 
                             x:Name="LeadTimeTextBox"
                             Margin="0,0,0,5"/>

                    <!-- Link -->
                    <TextBlock Grid.Row="6" Grid.Column="0" 
                               Text="Link:" 
                               VerticalAlignment="Center"
                               Margin="0,0,10,5"/>
                    <TextBox Grid.Row="6" Grid.Column="1" 
                             x:Name="LinkTextBox"
                             Margin="0,0,0,5"/>

                    <!-- Datasheet -->
                    <TextBlock Grid.Row="7" Grid.Column="0" 
                               Text="Datasheet URL:" 
                               VerticalAlignment="Center"
                               Margin="0,0,10,5"/>
                    <TextBox Grid.Row="7" Grid.Column="1" 
                             x:Name="DatasheetTextBox"
                             Margin="0,0,0,5"/>
                </Grid>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">
            <Button Content="Skip" 
                    Width="80" 
                    Height="30" 
                    Margin="0,0,10,0"
                    Click="SkipButton_Click"/>
            <Button Content="Save" 
                    Width="80" 
                    Height="30"
                    Background="#2196F3"
                    Foreground="White"
                    BorderThickness="0"
                    Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>