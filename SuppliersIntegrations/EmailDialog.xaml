<Window x:Class="BOMVIEW.EmailDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Send Report" 
        Height="400" 
        Width="500"
        WindowStartupLocation="CenterOwner"
        Background="#F0F2F5">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Send Report" 
                  FontSize="20" 
                  FontWeight="SemiBold" 
                  Margin="0,0,0,20"/>

        <!-- Form -->
        <StackPanel Grid.Row="1">
            <Grid Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="To:" 
                         VerticalAlignment="Center" 
                         Margin="0,0,10,0"/>
                <TextBox x:Name="ToEmailTextBox" 
                        Grid.Column="1" 
                        Height="30"
                        Text="levi@testview.co.il"
                        IsReadOnly="True"/>
            </Grid>

            <TextBlock Text="Subject:" Margin="0,0,0,5"/>
            <TextBox x:Name="SubjectTextBox" 
                    Height="30"
                    Margin="0,0,0,15"/>

            <TextBlock Text="Message:" Margin="0,0,0,5"/>
            <TextBox x:Name="MessageTextBox" 
                    Height="150" 
                    TextWrapping="Wrap" 
                    AcceptsReturn="True"
                    VerticalScrollBarVisibility="Auto"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            <Button Content="Cancel" 
                    Width="100"
                    Height="35"
                    Margin="0,0,10,0"
                    Click="CancelButton_Click"/>
            <Button Content="Send" 
                    Width="100"
                    Height="35"
                    Background="#2196F3"
                    Foreground="White"
                    Click="SendButton_Click"/>
        </StackPanel>
    </Grid>
</Window>