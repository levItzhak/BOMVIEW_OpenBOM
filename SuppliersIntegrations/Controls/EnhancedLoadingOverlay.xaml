<UserControl x:Class="BOMVIEW.Controls.EnhancedLoadingOverlay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Visibility="Collapsed">
    <Grid Background="#80000000">
        <Border Background="#FFFFFF"
                CornerRadius="8"
                Width="400"
                MaxHeight="300"
                Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Animated spinner -->
                <Grid Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,15">
                    <Canvas Width="40" Height="40">
                        <Ellipse x:Name="Spinner" Width="40" Height="40" StrokeThickness="4">
                            <Ellipse.RenderTransform>
                                <RotateTransform CenterX="20" CenterY="20" Angle="0"/>
                            </Ellipse.RenderTransform>
                            <Ellipse.Stroke>
                                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                    <GradientStop Color="#2196F3" Offset="0"/>
                                    <GradientStop Color="#80E5E5E5" Offset="0.5"/>
                                    <GradientStop Color="#E5E5E5" Offset="1"/>
                                </LinearGradientBrush>
                            </Ellipse.Stroke>
                        </Ellipse>
                    </Canvas>
                </Grid>

                <!-- Main title -->
                <TextBlock x:Name="TitleText"
                           Grid.Row="1"
                           Text="Processing"
                           FontSize="18"
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,15"/>

                <!-- Progress bar -->
                <Grid Grid.Row="2" Margin="0,0,0,10">
                    <ProgressBar x:Name="ProgressIndicator" 
                                 Height="8" 
                                 Margin="0,5,0,5"
                                 Minimum="0"
                                 Maximum="100"
                                 Foreground="#2196F3"
                                 BorderThickness="0"/>

                    <!-- Indeterminate progress bar that's shown when no specific progress is available -->
                    <ProgressBar x:Name="IndeterminateIndicator"
                                 Height="8"
                                 Margin="0,5,0,5"
                                 IsIndeterminate="True"
                                 Foreground="#2196F3"
                                 BorderThickness="0"
                                 Visibility="Collapsed"/>
                </Grid>

                <!-- Progress statistics (e.g., "Processing 5 of 20 items") -->
                <TextBlock x:Name="ProgressStatsText"
                           Grid.Row="3"
                           HorizontalAlignment="Center"
                           Foreground="#444444"
                           Margin="0,0,0,10"
                           Visibility="Collapsed"/>

                <!-- Main status message -->
                <TextBlock x:Name="StatusText"
                           Grid.Row="4"
                           Text="Loading..."
                           TextWrapping="Wrap"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>

                <!-- Secondary/detail status message -->
                <TextBlock x:Name="DetailText"
                           Grid.Row="5"
                           TextWrapping="Wrap"
                           HorizontalAlignment="Center"
                           Foreground="#666666"
                           FontSize="12"
                           Margin="0,0,0,15"
                           MaxWidth="350"
                           TextAlignment="Center"
                           Visibility="Collapsed"/>

                <!-- Elapsed time indicator -->
                <TextBlock x:Name="ElapsedTimeText"
                          Grid.Row="6"
                          HorizontalAlignment="Center"
                          Foreground="#888888"
                          FontSize="11"
                          Margin="0,0,0,5"
                          Visibility="Collapsed"/>

                <!-- Cancel button -->
                <Button x:Name="CancelButton"
                        Grid.Row="7"
                        Content="Cancel"
                        Width="100"
                        Height="30"
                        HorizontalAlignment="Center"
                        Background="#E0E0E0"
                        Foreground="#333333"
                        Padding="10,5"
                        Visibility="Collapsed"
                        Click="CancelButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="4"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#CCCCCC"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Border>
    </Grid>
</UserControl>