<Window x:Class="BOMVIEW.CatalogColumnFinderDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Catalog Column Finder" 
        Height="500" 
        Width="700"
        WindowStartupLocation="CenterOwner"
        Background="#F0F2F5">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Find Catalogs with Column" 
                   FontSize="18" 
                   FontWeight="SemiBold" 
                   Margin="0,0,0,15"/>

        <!-- Search Section -->
        <Border Grid.Row="1" 
                Background="White" 
                CornerRadius="6" 
                Padding="15" 
                Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0"
                           Text="Enter column name:" 
                           Margin="0,0,0,5"/>

                <Grid Grid.Row="1" Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="ColumnNameTextBox" 
                             Grid.Column="0"
                             Height="35" 
                             Padding="10,0" 
                             VerticalContentAlignment="Center"
                             Margin="0,0,10,0"/>

                    <CheckBox x:Name="CaseSensitiveCheckbox"
                              Grid.Column="1"
                              Content="Case-sensitive"
                              VerticalAlignment="Center"/>
                </Grid>

                <Button x:Name="SearchButton" 
                        Grid.Row="1"
                        Grid.Column="1"
                        Content="Search" 
                        Height="35" 
                        Width="100"
                        Background="#2196F3"
                        Foreground="White"
                        BorderThickness="0"
                        Click="SearchButton_Click"/>
            </Grid>
        </Border>

        <!-- Results Section -->
        <Grid Grid.Row="2">
            <!-- Loading indicator -->
            <StackPanel x:Name="LoadingIndicator" 
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Center"
                        Visibility="Collapsed">
                <ProgressBar IsIndeterminate="True" 
                             Width="200" 
                             Height="4" 
                             Margin="0,0,0,10"/>
                <TextBlock x:Name="StatusText" 
                           Text="Searching..." 
                           HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Results Grid -->
            <DataGrid x:Name="ResultsGrid"
                      ItemsSource="{Binding Results}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      BorderThickness="1"
                      BorderBrush="#D1D5DB"
                      RowHeaderWidth="0"
                      GridLinesVisibility="All"
                      HorizontalGridLinesBrush="#E5E7EB"
                      VerticalGridLinesBrush="#E5E7EB"
                      AlternatingRowBackground="#F9FAFB"
                      RowBackground="White"
                      RowHeight="40"
                      HeadersVisibility="Column">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Catalog Name" 
                                        Binding="{Binding CatalogName}" 
                                        Width="*"/>
                    <DataGridTextColumn Header="Catalog ID" 
                                        Binding="{Binding CatalogId}" 
                                        Width="200"/>
                    <DataGridTextColumn Header="Column Name" 
                                        Binding="{Binding ColumnName}" 
                                        Width="150"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <!-- Bottom buttons -->
        <Button Grid.Row="3" 
                Content="Close" 
                HorizontalAlignment="Right"
                Width="100" 
                Height="35" 
                Margin="0,15,0,0"
                Background="#607D8B"
                Foreground="White"
                BorderThickness="0"
                Click="CloseButton_Click"/>
    </Grid>
</Window>